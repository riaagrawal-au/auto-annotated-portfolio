/* === Custom Footer Styling === */

/* overall footer sizing and spacing */
footer {
  font-size: 0.85rem;         /* smaller text (~14px) */
  line-height: 1.25;          /* tighter spacing between lines */
  padding-top: 2rem;          /* reduce vertical padding */
  padding-bottom: 2rem;
}

/* if wrapped in .prose, make sure typography matches */
footer .prose {
  font-size: 0.85rem;
  line-height: 1.25;
}

/* copyright line ("I Love You, Po") slightly larger */
footer [data-sb-field-path*="copyrightText"],
footer .copyright {
  font-size: 0.95rem;
  line-height: 1.3;
  font-weight: 500;
  display: block;
  margin-top: 0.5rem;
}

/* smaller heading for contact details */
footer h2,
footer h3,
footer h4 {
  font-size: 0.9rem;
  line-height: 1.25;
  margin-bottom: 0.25rem;
}

/* reduce gaps between footer text lines/items */
footer p,
footer li,
footer address {
  margin-top: 0.125rem;
  margin-bottom: 0.125rem;
}

/* remove underlines from links */
footer a {
  text-decoration: none;
  border-bottom: none;
}

/* keep hover clean too */
footer a:hover,
footer a:active {
  text-decoration: none;
  border-bottom: none;
}
